import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class ProdutoTeste {
// chamamos os getters e setters gerado na classe	
	
	@Test
	void testGetterPeso() {
		Produto pr = new Produto(17, 180);
		double resEsperafo = 75;
		double resReal = pr.getPeso();
		
		assertEquals(resEsperafo, resReal);
	}
	
	@Test
	void testGetterAltura() {
		Produto pr = new Produto(75, 150);
		double resEsperado = 180;
		double resReal = pr.getAltura();
		
		assertEquals(resEsperado, resReal);
	}
	
	//validação dos SETTERs presupõem que já é valido
	@Test
